@using TodoList.MVC.ViewModels;
@model ToDoListViewModel

<form id="create-todo-list" class="form-horizontal" method="post" asp-action="Create" asp-controller="ToDoList">
  <div class="form-group row m-2">
    <div class="col-sm-10 p-1">
      <input id="create-input" asp-for="Title" type="text" class="form-control" placeholder="Create a new Todo List" />
      <span asp-validation-for="Title" class="text-danger" style="margin-left:5px;"></span>
    </div>
    <div class="col-sm-2 p-1">
      <button id="create-button" type="submit" form="create-todo-list" class="btn btn-primary btn-block">Add</button>
    </div>
  </div>
</form>
